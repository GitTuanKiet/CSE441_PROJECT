<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cse_411_project.aigy.khanh.activity.LanguageActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UselessParent">

        <ImageButton
            android:id="@+id/ibtn_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/button_white_border"
            android:contentDescription="back"
            android:padding="20dp"
            app:srcCompat="@drawable/back"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txt_preferences"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="@string/theme"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="20dp"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:paddingHorizontal="25dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">


        <Button
            android:id="@+id/btn_light_mode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/vn"
            android:background="@drawable/button_white_border"
            android:fontFamily="@font/poppins_regular"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingHorizontal="30dp"
            android:layout_marginBottom="20dp"
            android:text="@string/vietnamese"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_dark_mode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_white_border"
            android:drawableStart="@drawable/us"
            android:fontFamily="@font/poppins_regular"
            android:paddingHorizontal="30dp"
            android:text="@string/english"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>